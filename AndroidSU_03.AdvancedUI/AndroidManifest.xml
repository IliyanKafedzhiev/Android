<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.veli.androidsu_03.advancedui"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.veli.androidsu_03.advancedui.MainActivity"
            android:label="@string/app_name"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.veli.androidsu_03.advancedui.HelloLoggedActivity"
            android:label="Logged In" >
        </activity>
        <activity
            android:name="com.veli.androidsu_03.advancedui.CalculatorActivity"
            android:label="Calculator" >
        </activity>
        <activity
            android:name="com.veli.androidsu_03.advancedui.MailClientActivity"
            android:label="Mail Client" >
        </activity>
    </application>

</manifest>