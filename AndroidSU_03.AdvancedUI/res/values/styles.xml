<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item> 
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Button.FixedDims">
        <item name="android:maxWidth">50dp</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:maxHeight">50dp</item>
        <item name="android:minHeight">50dp</item>
    </style>
    
    <style name="Button.FixedWidth">
        <item name="android:maxWidth">50dp</item>
        <item name="android:minWidth">50dp</item>
    </style>
    
    <style name="Button.FixedHeight">
        <item name="android:maxHeight">50dp</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="Button.FixedWidthDouble">
        <item name="android:maxWidth">100dp</item>
        <item name="android:minWidth">100dp</item>
    </style>
    
    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="TextView.FixedHeight">
        <item name="android:height">50dp</item>
    </style>
    
    <style name="FontNormal">
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="TextField">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="TextField.FontNormal">
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="TextField.FontLarge">
        <item name="android:textSize">22sp</item>
    </style>
</resources>
